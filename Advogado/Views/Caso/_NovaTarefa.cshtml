@model Advogado.Models.Tarefa

<div class="modal fade" id="modalNovaTarefa" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Nova tarefa</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("SalvarCasoComTarefa", "Caso", FormMethod.Post, new { @class = "form", id = "frmSalvarCasoComTarefa", enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(m => m.CasoId)
                    <div class="row">
                        <div class="form-group col-md-12">
                            @Html.LabelFor(m => m.Titulo) <label style="color: red" title="Este campo é obrigatório">*</label>
                            @Html.TextBoxFor(m => m.Titulo, new { @class = "form-control", placeholder = "Informe brevemente do que se trata esta tarefa", required = "" })
                            @Html.ValidationMessageFor(m => m.Titulo)
                        </div>

                        <div class="form-group col-md-12">
                            @Html.LabelFor(m => m.Descricao) <label style="color: red" title="Este campo é obrigatório">*</label>
                            @Html.TextAreaFor(m => m.Descricao, new { @class = "form-control", placeholder = "Informe detalhadamente do que se trata esta tarefa", required = "" })
                            @Html.ValidationMessageFor(m => m.Descricao)
                        </div>

                        <div class="form-group col-md-12">
                            @Html.LabelFor(m => m.DataExpiracao) <label style="color: red" title="Este campo é obrigatório">*</label>
                            @Html.TextBox("DataExpiracao", string.Empty, new { @class = "form-control date datepicker", required = "", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.DataExpiracao)
                        </div>

                        <div class="form-group col-md-12">
                            @Html.LabelFor(m => m.FuncionarioResponsavelId)
                            @Html.DropDownListFor(x => x.FuncionarioResponsavelId, new SelectList(ViewBag.Responsaveis, "FuncionarioId", "Nome"), "Tarefa sem responsável", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.FuncionarioResponsavelId)
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-sm waves-effect waves-light" onclick="$('#frmSalvarCasoComTarefa').submit()">Iniciar</button>
                <button type="button" class="btn btn-default btn-sm waves-effect waves-light" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
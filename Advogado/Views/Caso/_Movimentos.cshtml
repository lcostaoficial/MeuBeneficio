@model IEnumerable<Advogado.Models.Movimentacao>

<div class="col-md-12">
    <div class="prj-header margin-bottom-30">
        <a href="#" class="btn btn-primary btn-submit-prj btn-sm waves-effect waves-light" onclick="Caso.novoAcompanhamento()">Novo acompanhamento</a>
        <div class="result-count">
            Este caso possui o total de <b>@Model.Count()</b> acompanhamento(s)
        </div>
    </div>
</div>

<div class="col-md-12">
    @if (Model != null && Model.Any())
    {
        <div class="activity-list">
            @foreach (var movimentacao in Model)
            {
                <div class="activity-item">
                    @switch (movimentacao.TipoMovimento)
                    {
                        case Advogado.Models.TipoMovimento.Minima:
                            <div class="bar bg-success">
                                <div class="dot bg-success"></div>
                            </div>
                            break;
                        case Advogado.Models.TipoMovimento.Baixa:
                            <div class="bar bg-violet">
                                <div class="dot bg-violet"></div>
                            </div>
                            break;
                        case Advogado.Models.TipoMovimento.Normal:
                            <div class="bar bg-primary">
                                <div class="dot bg-primary"></div>
                            </div>
                            break;
                        case Advogado.Models.TipoMovimento.Urgente:
                            <div class="bar bg-orange">
                                <div class="dot bg-orange"></div>
                            </div>
                            break;
                        case Advogado.Models.TipoMovimento.Alta:
                            <div class="bar bg-danger">
                                <div class="dot bg-danger"></div>
                            </div>
                            break;
                        default:
                            <div class="bar bg-primary">
                                <div class="dot bg-primary"></div>
                            </div>
                            break;
                    }
                    <div class="content">
                        <div class="text" style="font-size: 12px;color: #adadad;">@($"{movimentacao.Data.ToShortDateString()} {movimentacao.Data.ToShortTimeString()}")</div>
                        <div class="text">
                            <b>@movimentacao.Funcionario.Nome:</b> @movimentacao.Descricao
                            @if (!string.IsNullOrEmpty(movimentacao.CaminhoAnexo) && !string.IsNullOrEmpty(movimentacao.NomeAnexo))
                            {
                                <br />
                                <a target="_blank" href="@Url.Content(movimentacao.CaminhoAnexo)">
                                    <i class="fa fa-paperclip" aria-hidden="true"></i>
                                    @movimentacao.NomeAnexo
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>Nenhuma movimentação para este caso até o momento!</p>
    }
</div>


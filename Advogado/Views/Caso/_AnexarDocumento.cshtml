@model Advogado.Models.Arquivo

<div class="modal fade" id="modalAnexarDocumento" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Anexar documento</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("SalvarCasoComAnexo", "Caso", FormMethod.Post, new { @class = "form", id = "frmSalvarCasoComAnexo", enctype = "multipart/form-data" }))
                {      
                    @Html.HiddenFor(m => m.ArquivoId)
                    @Html.HiddenFor(m => m.TipoArquivoId)
                    @Html.HiddenFor(m => m.CasoId)
                    <div class="row">
                        <div class="col-md-12" id="div-modelo-arquivo">
                            <label>Arquivo</label>
                            <input type="file" id="ArquivoBinario" name="ArquivoBinario">
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-sm waves-effect waves-light" onclick="$('#frmSalvarCasoComAnexo').submit()">Salvar</button>
                <button type="button" class="btn btn-default btn-sm waves-effect waves-light" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
@model Advogado.Models.Tarefa

<div class="modal fade" id="modalAlterarPrazo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Alterar prazo</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("AlterarPrazo", "Tarefa", FormMethod.Post, new { @class = "form", id = "frmAlterarPrazo" }))
                {
                    @Html.HiddenFor(m => m.TarefaId)
                    <div class="row">
                        <div class="form-group col-md-12">
                            @Html.LabelFor(m => m.JustificativaDilatacaoPrazo) <label style="color: red" title="Este campo é obrigatório">*</label>
                            @Html.TextAreaFor(m => m.JustificativaDilatacaoPrazo, new { @class = "form-control", placeholder = "Informe o motivo de está dilatando o prazo", required = "" })
                            @Html.ValidationMessageFor(m => m.JustificativaDilatacaoPrazo)
                        </div>

                        <div class="form-group col-md-12">
                            @Html.LabelFor(m => m.NovaDataExpiracao) <label style="color: red" title="Este campo é obrigatório">*</label>
                            @Html.TextBox("NovaDataExpiracao", string.Empty, new { @class = "form-control date datepicker", required = "", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.NovaDataExpiracao)
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-sm waves-effect waves-light" onclick="$('#frmAlterarPrazo').submit()">Alterar</button>
                <button type="button" class="btn btn-default btn-sm waves-effect waves-light" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
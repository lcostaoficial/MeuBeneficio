@{
    ViewBag.Title = "Tarefas";
}

<div class="col-xs-12">
    <div class="box-content">
        <div class="col-md-3">
            <div id="external-events">
                <p>Classificação das cores das tarefas</p>
                <div style="cursor: default; margin: 5px 7px 5px 0px" class="fc-event bg-success ">Tarefa finalizada</div>
                <div style="cursor: default; margin: 5px 7px 5px 0px" class="fc-event bg-danger">Tarefa atrasada</div>
                <div style="cursor: default; margin: 5px 7px 5px 0px" class="fc-event bg-primary">Tarefa ainda em dias</div>
                <div style="cursor: default; margin: 5px 7px 5px 0px" class="fc-event bg-warning">Tarefa vencendo hoje</div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="box-content">
                <div id="calendar" data-url="@Url.Action("TarefasQuadroGeral", "Tarefa")"></div>
            </div>
        </div>
    </div>
</div>

@section modal
{
    @*@Html.Partial("~/Views/Caso/_NovaTarefa.cshtml")*@
    @Html.Partial("~/Views/Caso/_FinalizarTarefa.cshtml")
    @Html.Partial("~/Views/Caso/_AlterarResponsavel.cshtml")
    @Html.Partial("~/Views/Caso/_AlterarPrazo.cshtml")
    <div data-url="@Url.Action("DetalhesTarefa", "Tarefa")" class="modal fade" id="modalDetalhesTarefa" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
}

@section styles
{
    <!-- FullCalendar -->
    <link rel="stylesheet" href="~/Assets/plugin/fullcalendar/fullcalendar.min.css">
    <link rel="stylesheet" href="~/Assets/plugin/fullcalendar/fullcalendar.print.css" media='print'>

    <!-- Datepicker -->
    <link rel="stylesheet" href="~/Assets/plugin/datepicker/css/bootstrap-datepicker.min.css">
}

@section scripts
{
    <!-- Jquery UI -->
    <script src="~/Assets/plugin/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/Assets/plugin/jquery-ui/jquery.ui.touch-punch.min.js"></script>

    <!-- FullCalendar -->
    <script src="~/Assets/plugin/moment/moment.js"></script>
    <script src="~/Assets/plugin/fullcalendar/fullcalendar.min.js"></script>
    <script src="~/Assets/plugin/fullcalendar/locale/pt-br.js"></script>

    <!-- Datepicker -->
    <script src="~/Assets/plugin/datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Assets/plugin/datepicker/locales/bootstrap-datepicker.pt-BR.min.js"></script>

    <script src="~/Assets/scripts/tarefas.js"></script>

    <script src="~/Assets/scripts/caso.js"></script>

    <script>

        $(function () {

            "use strict";

            window.QuadroGeral = window.QuadroGeral || {};
            window.Tarefas = window.Tarefas || {};
            window.Caso = window.Caso || {};

            Tarefas.carregarCalendario();
        });
    </script>
}
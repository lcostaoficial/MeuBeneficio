@using Advogado.Models
@model IEnumerable<TipoArquivo>

<table id="example" class="table table-responsive table-striped table-bordered display" style="width:100%">
    <thead>
        <tr>
            <th>Descrição</th>                      
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr @{ if (!item.Ativo) { @Html.Raw("style=\"background-color: #fdeef2\"")  ; } }>
            <td>@item.Descricao</td>     
            <td class="text-nowrap" width="10">
                <a class="btn btn-circle btn-info btn-sm" title="Editar" href="@Url.Action("Editar", new { id = item.TipoArquivoId })" data-togle="tooltip">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                </a>
                <a class="btn btn-circle @(item.Ativo ? "btn-warning" : "btn-success") btn-sm" title="@(item.Ativo ? "Desativar" : "Ativar")" btn-sm" href="@Url.Action("Remover", new { id = item.TipoArquivoId })" data-togle="tooltip">
                    <i class="@(item.Ativo ? "fa fa-close" : "fa fa-check")" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
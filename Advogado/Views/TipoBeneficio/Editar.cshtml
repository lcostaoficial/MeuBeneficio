@model Advogado.Models.TipoBeneficio
@{
    ViewBag.Title = "Editar Benefício";
}

@section styles
{
    <link href="~/Assets/plugin/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
    <style>
        .box-content.card .dropdown {
            top: 0px !important;
        }
    </style>
}

@section scripts
{
    <script src="~/Assets/plugin/bootstrap-select/js/bootstrap-select.js"></script>
    <script src="~/Assets/plugin/bootstrap-select/js/i18n/defaults-pt_BR.js"></script>
}

<div class="row small-spacing">
    <div class="col-lg-12 col-xs-12">
        <div class="box-content card white">
            <h4 class="box-title">@ViewBag.Title</h4>
            <div class="card-content">
                @using (Html.BeginForm("Editar", "TipoBeneficio", FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.TipoBeneficioId)
                    @Html.Partial("_Form")
                }
            </div>
        </div>
    </div>
</div>
@model Advogado.Models.QuestionarioSalarioMaternidade

<div class="form-group">
    @if (Model.HouveAborto == true)
    {
        <label style="text-align: justify">Quando ocorreu o aborto ou óbito do seu bebê, você estava desempregada?</label>
    }
    else
    {
        <label style="text-align: justify">Você estava/estará desempregada no dia do nascimento do seu bebê?</label>
    }
    <label class="container_radio version_2">
        Sim
        @Html.RadioButton("DesempregadaAposGravidez", true, false, new { required = "" })
        <span class="checkmark"></span>
    </label>
    <label class="container_radio version_2">
        Não
        @Html.RadioButton("DesempregadaAposGravidez", false, false, new { required = "" })
        <span class="checkmark"></span>
    </label>
</div>

<div class="row">
    <div class="col-md-12">
        <input type="submit" value="Confirmar" class="btn_1 add_bottom_15">
    </div>
</div>

<input type="hidden" id="PassoSalarioMaternidade" name="PassoSalarioMaternidade" value="@Advogado.Models.PassoSalarioMaternidade.DesempregadaAposGravidez" />
<input type="hidden" id="ObjetoSerializado" name="ObjetoSerializado" value="@Model.ObjetoSerializado" />
@model Advogado.Models.Pergunta
@{
    ViewBag.Title = "Nova Pergunta";
}

@section scripts
{
    <script src="~/Assets/scripts/alternativa.js"></script>
    <script src="~/Assets/scripts/pergunta.js"></script>
}

<div class="row small-spacing">
    <div class="col-lg-12 col-xs-12">
        <div class="box-content card white">
            <h4 class="box-title">@ViewBag.Title</h4>
            <div class="card-content">
                @using (Html.BeginForm("Novo", "Pergunta", FormMethod.Post))
                {
                    @Html.Partial("_Form")
                }
            </div>
        </div>
    </div>
</div>